<manifest
	xmlns:android="http://schemas.android.com/apk/res/android"
	package="io.supernova.spacebook1">

	<uses-permission android:name="android.permission.INTERNET"/>

	<application
		android:allowBackup="true"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:supportsRtl="true"
		android:theme="@style/AppTheme">
	
		<activity
			android:label="@string/welcome_activity_title"
			android:name=".activity.WelcomeActivity"
			android:theme="@style/WelcomeActivityTheme">
		
			<intent-filter>
			
				<category android:name="android.intent.category.LAUNCHER"/>
			
				<action android:name="android.intent.action.MAIN"/>
			</intent-filter>
		</activity>
	
		<activity
			android:label="@string/login_activity_title"
			android:name=".activity.LoginActivity"
			android:theme="@style/LoginActivityTheme"/>
	
		<activity
			android:label="@string/sign_up_activity_title"
			android:name=".activity.SignUpActivity"
			android:theme="@style/SignUpActivityTheme"/>
	
		<activity
			android:label="@string/first_page_activity_title"
			android:launchMode="singleInstance"
			android:name=".activity.FirstPageActivity"
			android:theme="@style/FirstPageActivityTheme"/>
	
		<activity
			android:label="@string/more_details_activity_title"
			android:name=".activity.MoreDetailsActivity"
			android:theme="@style/MoreDetailsActivityTheme"/>
	
		<activity
			android:label="@string/send_to_activity_title"
			android:name=".activity.SendToActivity"
			android:theme="@style/SendToActivityTheme"/>
	</application>
</manifest>